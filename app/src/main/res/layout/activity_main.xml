<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.joarpcss.myapplication.MainActivity"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="e-Diary"
        android:id="@+id/txtTitle"
        android:layout_marginTop="44dp"
        android:textSize="50dp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:foreground="@android:color/background_light"
        android:textColor="@color/abc_secondary_text_material_dark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etxtPword"
        android:hint="Enter password"
        android:height="45dp"
        android:layout_below="@+id/etxtEmailAdd"
        android:layout_alignLeft="@+id/etxtEmailAdd"
        android:layout_alignStart="@+id/etxtEmailAdd"
        android:layout_alignRight="@+id/etxtEmailAdd"
        android:layout_alignEnd="@+id/etxtEmailAdd"
        android:textSize="20dp"
        android:textColor="@color/abc_primary_text_material_dark" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:id="@+id/btnLogin"
        android:typeface="monospace"
        android:backgroundTint="@color/abc_color_highlight_material"
        android:textColor="@color/abc_search_url_text_pressed"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/txtShow"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:id="@+id/txtSignUp"
        android:typeface="monospace"
        android:textSize="15dp"
        android:textStyle="bold"
        android:clickable="true"
        android:visibility="visible"
        android:textColorLink="@color/colorPrimaryDark"
        android:textColor="@color/abc_primary_text_material_dark"
        android:layout_below="@+id/btnLogin"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show"
        android:id="@+id/txtShow"
        android:textColor="@color/abc_secondary_text_material_dark"
        android:typeface="monospace"
        android:textSize="15dp"
        android:linksClickable="true"
        android:clickable="true"
        android:layout_below="@+id/etxtPword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etxtEmailAdd"
        android:hint="Enter email address or username"
        android:height="45dp"
        android:typeface="monospace"
        android:textSize="20dp"
        android:layout_marginTop="83dp"
        android:textColor="@color/abc_primary_text_material_dark"
        android:singleLine="true"
        android:layout_below="@+id/txtTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
